{% extends "layout.njk" %}

{% block head %}
    <link rel="stylesheet" href="/teachers.css">
{% endblock head %}

{% block content %}
    <div class="card">
        <section class="avatar"></section>
        <section class="details">

            <h3>Detalhes</h3>

            <div class="items">
                <div>Nome Completo</div>
                <div>{{teacher.name}}</div>
            </div>

            <div class="items">
                <div>Idade</div>
                <div>{{teacher.birth}}</div>
            </div>
            
            <div class="items">
                <div>Grau de escolaridade</div>
                <div>{{teacher.education_level}}</div>
            </div>

            <div class="items">
                <div>Tipo de aula</div>
                <div>{{teacher.class_type}}</div>
            </div>

            <div class="items">
                <div>Acompanhamento</div>
                <div>
                    {%for item in teacher.knowledge%}
                        <span>{{item}}</span>
                    {%endfor%}
                </div>
            </div>

            <div class="items">
                <div>Desde</div>
                <div>{{teacher.since}}</div>
            </div>
        

        </section>
    </div>
{% endblock content %}